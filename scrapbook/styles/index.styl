@import './mixin'
@import "purecss/pure.css"
@import "font-awesome/font-awesome.css"

body
  background-color: #ECF1F2

h2
  text-align: center
  font-size: 22px

p
  text-align: center
  font-size: 16px

div.draggable
  cursor: move
  height: 1px
  width: 1px
  top: .4rem
  position: absolute

div.delete
  visibility: hidden

.editing
  .delete, .graphic, .note
    cursor: default
    opacity: .5

  .delete:hover, .graphic:hover, .note:hover
    -webkit-transition: all 0.2s ease
    -moz-transition:    all 0.2s ease
    -ms-transition:     all 0.2s ease
    -o-transition:      all 0.2s ease

    cursor: pointer
    opacity: .8

  .delete
    visibility: visible

div.controls
  background-color: #CBDBE0
  padding: .4rem
  position: fixed
  width: 100%
  z-index: 925

div.note
  background-color: #FDEECD
  border: 1px solid #EAB05E
  position: absolute

  button
    font-size: 12px

div.note.being-edited
  span.contents
    display: none

button.button-secondary
  background-color: #DDAEFF
  color: #8156A7

span.spacing
  padding-left: 4px

div.delete
  background: black
  border-radius: 50%
  color: white
  font-size: 10px
  position: absolute
  top: -8px
  right: -10px
  text-align: center
  width: 16px
  height: 16px

  i
    position: relative
    top: 1px
