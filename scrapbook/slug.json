{
  "server": {
    "port"  : 7771
  },

  "routes": [
    { ""              : "./public" },
    { "/fonts"        : "./node_modules/font-awesome/fonts" },
    { "/font-awesome" : "./node_modules/font-awesome/css" },
    { "/purecss"      : "./node_modules/purecss/build" }
  ],

  "packages": {
    "appName": {
      "libs"    : [
        "node_modules/jade/runtime.js",
        "node_modules/jquery/dist/jquery.js",
        "node_modules/draggabilly/dist/draggabilly.pkgd.min.js"
      ],
      "modules" : [
        "spine",
        "spine/lib/local",
        "spine/lib/route",
        "spine/lib/manager",
        "spine/lib/ajax"
      ],
      "paths"  : ["./src"],
      "target" : "./public/application.js",
      "jsAfter": "jade.rethrow = function rethrow(err, filename, lineno){ throw err; } "
    },
    "css": {
      "paths"  : ["./styles"],
      "target" : "./public/application.css"
    }
  }
}
